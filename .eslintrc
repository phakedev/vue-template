{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/vue3-recommended",
    "eslint:recommended",
    "@vue/typescript/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    // <script setup>
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off"
  },
  "plugins": ["prettier", "@typescript-eslint"],
  "ignorePatterns": ["dist"]
}
